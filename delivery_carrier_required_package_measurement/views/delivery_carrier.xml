<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_carrier_form_inherit" model="ir.ui.view">
        <field name="name">delivery.carrier.form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="carrier_package_measurement" string="Package Measurement">
                    <group name="package_measurement">
                        <group
                            name="required_mesaurement"
                            string="Package Required Measurements"
                        >
                            <field name="package_height_required" />
                            <field name="package_length_required" />
                            <field name="package_weight_required" />
                            <field name="package_width_required" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
